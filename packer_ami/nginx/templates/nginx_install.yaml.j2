- name: Install NGINX
  gather_facts: true
  hosts: localhost
  become: true

  tasks:
    - name: Install NGINX
      ansible.builtin.yum:
        name: nginx
        state: present
      when: ansible_os_family == "RedHat"
    
    - name: Install NGINX (Debian/Ubuntu)
      ansible.builtin.apt:
        name: nginx
        state: present
        update_cache: yes
      when: ansible_os_family == "Debian"
    
    - name: Deploy custom NGINX configuration
      ansible.builtin.template:
        src: ../packer_ami/nginx/templates/nginx.conf.j2
        dest: "{{ MACHINE.nginx_config_file }}"
        mode: '0644'
        owner: root
        group: root
      notify:
        - Restart NGINX
    - name: Set up default website
      ansible.builtin.template:
        src: ../packer_ami/nginx/templates/default_site.j2
        dest: "{{ MACHINE.nginx_default_site }}"
        mode: '0644'
        owner: root
        group: root
      notify:
        - Restart NGINX

    - name: Copy website files
      ansible.builtin.copy:
        src: "{{ MACHINE.website_files }}"
        dest: "{{ MACHINE.website_root }}"
        owner: "{{ MACHINE.nginx_user }}"
        group: "{{ MACHINE.nginx_user }}"
        mode: '0755'
        recursive: yes
    - name: Ensure NGINX is started and enabled
      ansible.builtin.service:
        name: nginx
        state: started
        enabled: yes

  handlers:
    - name: Restart NGINX
      ansible.builtin.service:
        name: nginx
        state: restarted
